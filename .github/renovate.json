{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "local>axonivy/renovate-config",
    "schedule:weekends"
  ],
  "baseBranches": [
    "master",
    "/^release\\/[0-9]{2}\\.[0-9]+/"
  ],
  "packageRules": [
    {
      "matchDepTypes": [ "test" ],
      "automerge": true
    },
    {
      "matchBaseBranches": [
        "master"
      ],
      "matchDepTypes": [
        "build",
        "compile"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true
    },
    {
      "matchBaseBranches": [
        "/^release\\/[0-9]{2}\\.[0-9]+/"
      ],
      "matchDepTypes": [
        "build",
        "compile"
      ],
      "matchUpdateTypes": [
        "patch"
      ],
      "automerge": true
    }
  ]
}
